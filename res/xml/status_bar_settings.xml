<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/status_bar_title">

    <!-- Status bar tweaks -->
    <PreferenceCategory
        android:title="@string/status_bar_style_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="status_bar_color"
            android:title="@string/status_bar_color"
            android:defaultValue="0xFF000000"
            android:summary="@string/status_bar_color_summary" />

	<!-- Battery style -->
	<PreferenceScreen
            android:fragment="com.android.settings.beanstalk.BatteryIconStyle"
            android:key="battery_style_pref"
            android:title="@string/battery_icon_title" />

        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:id="@+id/battery_percentage_indicator"
            android:key="battery_percentage_indicator"
            android:title="@string/battery_percentage_indicator_title"
            android:summary="@string/battery_percentage_indicator_summary"
            android:defaultValue="false" />

        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:id="@+id/battery_percentage_indicator_plugged"
            android:key="battery_percentage_indicator_plugged"
            android:title="@string/battery_percentage_indicator_plugged_title"
            android:summary="@string/battery_percentage_indicator_plugged_summary"
            android:defaultValue="false" />

        <!-- Battery bar -->
         <PreferenceScreen
            android:key="battery_bar_cat"
            android:fragment="com.android.settings.beanstalk.BatteryBar"
            android:title="@string/battery_bar_cat" />

	<!-- Clock style -->
        <PreferenceScreen
            android:fragment="com.android.settings.beanstalk.StatusBarClockStyle"
            android:key="clock_style_pref"
            android:title="@string/status_bar_clock" />

	<!-- Network usage stats -->
        <PreferenceScreen
            android:key="network_usage_stats"
            android:fragment="com.android.settings.beanstalk.NetworkUsageStats"
            android:title="@string/status_bar_network_cat" /> 

    </PreferenceCategory>

    <ListPreference
        android:key="status_bar_traffic_style"
        android:dialogTitle="@string/show_network_speed_title"
        android:title="@string/show_network_speed_title"
        android:entries="@array/entries_status_bar_traffic_style"
        android:entryValues="@array/values_status_bar_traffic_style"
        android:defaultValue="0" />

    <PreferenceCategory
            android:key="signal"
            android:title="@string/status_bar_signal_header">

        <ListPreference
            android:entries="@array/signal_style_entries"
            android:entryValues="@array/signal_style_values"
            android:key="signal_style"
            android:title="@string/signal_style" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="signal_color"
            android:title="@string/signal_color_title"
            android:defaultValue="0xffffffff" />

        <CheckBoxPreference
            android:key="hide_signal"
            android:title="@string/hide_signal_title"
            android:summary="@string/hide_signal_summary" />

    </PreferenceCategory>

    <!-- Status bar brightness control -->
    <PreferenceCategory
        android:key="status_bar_general"
        android:title="@string/status_bar_general_title">

        <CheckBoxPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:defaultValue="false" />

        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notif_count_title"
            android:summary="@string/status_bar_notif_count_summary"
            android:defaultValue="false" />

	<com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
	    android:key="double_tap_sleep_gesture"
	    android:title="@string/status_bar_double_tap_to_sleep_title"
	    android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
